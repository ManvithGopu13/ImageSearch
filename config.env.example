# NVIDIA API Configuration
# Get your API key from: https://build.nvidia.com/
NVIDIA_API_KEY=your_nvidia_api_key_here

# NVIDIA Model Configuration
# Available models: meta/llama-3.1-8b-instruct, meta/llama-3.1-70b-instruct, 
#                   mistralai/mixtral-8x7b-instruct-v0.1, etc.
# See: https://build.nvidia.com/explore/discover
NVIDIA_MODEL_NAME=meta/llama-3.1-8b-instruct

# Model Configuration
# CLIP model for image-text embeddings (ViT-B/32 is good balance of speed/accuracy)
CLIP_MODEL=ViT-B/32

# BLIP-2 model for image captioning
BLIP_MODEL=Salesforce/blip2-opt-2.7b

# YOLO model for object detection (yolov8n is fastest, yolov8x is most accurate)
YOLO_MODEL=yolov8n.pt

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
COLLECTION_NAME=image_collection

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
UPLOAD_DIR=./uploads

# Processing Configuration
BATCH_SIZE=32
MAX_IMAGE_SIZE=1024
TOP_K_RESULTS=10

# Search Quality Configuration
SIMILARITY_THRESHOLD=0.22
ENABLE_QUERY_BLENDING=True
ENABLE_MULTI_FIELD_BOOST=True

